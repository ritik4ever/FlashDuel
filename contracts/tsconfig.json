{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "resolveJsonModule": true
    },
    "include": [
        "./scripts",
        "./test",
        "./hardhat.config.ts"
    ],
    "exclude": [
        "node_modules",
        "artifacts",
        "cache"
    ]
}